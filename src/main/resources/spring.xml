<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="helloclient.Client">
            <constructor-arg index="1" value="BOO ZOO"/>
            <constructor-arg index="0" value="1"/>
    </bean>


    <bean id="eventLogger" class="helloclient.ConsoleEventLogger"/>

    <bean id="app" class="helloclient.App">
            <constructor-arg ref="client"/>
            <constructor-arg ref="eventLogger"/>
    </bean>
    <!--target/classes/helloclient.Client.class-->
