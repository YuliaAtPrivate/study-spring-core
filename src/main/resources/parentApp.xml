<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
        <import resource="loggers.xml"/>

    <bean id="client" class="helloclient.Client">
        <constructor-arg index="1" value="BOO ZOO"/>
        <constructor-arg index="0" value="1"/>
        <property name="age" value="44"/>
        <property name="boo" value="true"/>
        <property name="greeting" value="juuuuuII"/>
    </bean>
    <bean id="app" class="helloclient.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
        <constructor-arg ref ="event"/>
    </bean>
    <bean id = "event" class="helloclient.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref = "dateFormat"/>
    </bean>
    <bean id = "dateFormat"
          class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>
</beans>